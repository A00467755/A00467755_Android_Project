<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background2"
    >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-31dp"
        tools:layout_editor_absoluteY="-77dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hotel_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:text="Hotel Name"
                android:textAlignment="textStart"
                android:textColor="#ffcc55"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/checkin_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:text="Checkin"
                android:textAlignment="textStart"
                android:textColor="#ffcc55"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                app:layout_constraintStart_toStartOf="@id/hotel_name_text_view"
                app:layout_constraintTop_toBottomOf="@id/hotel_name_text_view"
                />
            <TextView
                android:id="@+id/checkout_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:text="Checkout"
                android:textAlignment="textStart"
                android:textColor="#ffcc55"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                app:layout_constraintStart_toStartOf="@id/checkin_text_view"
                app:layout_constraintTop_toBottomOf="@id/checkin_text_view"
                />

            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:text="Price"
                android:textAlignment="textStart"
                android:textColor="#ffcc55"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                app:layout_constraintStart_toStartOf="@id/checkout_text_view"
                app:layout_constraintTop_toBottomOf="@id/checkout_text_view"
                />


            <TextView
                android:id="@+id/guest_list_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Guest List"
                android:textAlignment="textStart"
                android:textColor="#ffcc55"
                android:textSize="20sp"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_text_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hotel_guest_list_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guest_list_title_text_view"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/hotel_guest_list_recyclerView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>